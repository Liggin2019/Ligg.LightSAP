@{
    Layout = "~/Views/Shared/_SysPage.cshtml";
    string defId = ViewBag.DefaultId;
}

@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostingEnvironment
@section header{
    @BundlerHelper.Render(HostingEnvironment.ContentRootPath, Url.Content("~/lib/bootstrap.treetable/1.0/bootstrap-treetable.min.css"))
    @BundlerHelper.Render(HostingEnvironment.ContentRootPath, Url.Content("~/lib/bootstrap.treetable/1.0/bootstrap-treetable.min.js"))
}

<div class="container-div">
    <div class="row">
        <div id="searchDiv" class="col-sm-12 search-collapse">
            <form>
                <div class="select-list">
                    <ul>
                        <li>
                            状态：<span id="status" col="Status"></span>
                        </li>
                        <li>
                            名称或描述：<input id="text" col="Text" type="text" />
                        </li>
                        <li><a class="btn btn-primary btn-sm" onclick="searchTreeGrid()"><i class="fa fa-search"></i>&nbsp;搜索</a></li>
                    </ul>
                </div>
            </form>
        </div>

        <div class="btn-group-sm" id="toolbar" role="group">
            <a id="btnAddTop" class="btn btn-success" onclick="showAddTopDialog()"><i class="fa fa-plus"></i> 创建</a>
            <a id="btnAdd" class="btn btn-success" onclick="showAddEditDialog(true)"><i class="fa fa-plus"></i> 新增</a>
            <a id="btnEdit" class="btn btn-primary" onclick="showAddEditDialog(false)"><i class="fa fa-edit"></i> 修改</a>
            <a id="btnDelete" class="btn btn-danger" onclick="deleteSelected()"><i class="fa fa-remove"></i> 删除</a>
            <a id="btnExpandAll" class="btn btn-info"><i class="fa fa-exchange"></i> 展开/折叠</a>
        </div>
        <div class="col-sm-12 select-table table-striped">
            <table id="gridTable" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>

<script type="text/javascript">
    var id = '';
    $(function () {
        $("#status").ysComboBox({ data: ys.getJson(@Html.Raw(typeof(StatusType).EnumToDictionaryJson())) });
        initTreeGrid();
    });

    function initTreeGrid() {
        var options = {
            code: "Id",
            parentCode: "ParentId",
            expandAll: false,
            expandFirst: false,
            toolbar: '#toolbar',
            expandColumn: '1',
            url: '@Url.Content("~/Sys/MenuItem/GetManageDtosJson")',
            modalName: "菜单",
            columns: [
                { field: 'selectItem', radio: true },
                {
                    field: 'Name', title: '名称', width: '20%', formatter: function (value, row, index) {
                        if (ys.isNullOrEmpty(row.Icon)) {
                            return row.Name;
                        } else {
                            return '<i class="' + row.Icon + '"></i> <span class="nav-label">' + row.Name + '</span>';
                        }
                    }
                },
                {
                    field: 'MenuType', title: '客户端', align: "left", width: '100px',
                    formatter: function (value, item, index) {
                        if (item.MenuType == "@((int)MenuType.MvcAdmin)") {
                            return '<span class="label label-success">@MenuType.MvcAdmin.ToString()</span>';
                        }
                        else if (item.MenuType == "@((int)MenuType.MvcSite)") {
                            return '<span class="label label-primary">@MenuType.MvcSite.ToString()</span>';
                        }
                        else if (item.MenuType == "@((int)MenuType.VueClient)") {
                            return '<span class="label label-warning">@MenuType.VueClient.ToString()</span>';
                        }
                        else {
                            return '<span class="label label-default">@MenuType.Undefined.ToString()</span>';
                        }
                    }
                },
                {
                    field: 'Type', title: '类别', align: "left", width: '80px',
                    formatter: function (value, item, index) {
                        if (item.Type == "@((int)MenuItemType.Directory)") {
                            return '<span class="label label-success">@MenuItemType.Directory.GetDescription()</span>';
                        }
                        else if (item.Type == "@((int)MenuItemType.SystematicPage)") {
                            return '<span class="label label-primary">@MenuItemType.SystematicPage.GetDescription()</span>';
                        }
                        else if (item.Type == "@((int)MenuItemType.CustomizedPage)") {
                            return '<span class="label label-danger">@MenuItemType.CustomizedPage.GetDescription()</span>';
                        }
                        
                        else if (item.Type == "@((int)MenuItemType.VueView)") {
                            return '<span class="label label-info">@MenuItemType.VueView.GetDescription()</span>';
                        }

                        else {
                            return '<span class="label label-default">@MenuItemType.OuterLink.GetDescription()</span>';
                        }
                    }
                },

                { field: 'Icon', title: '图标', width: '120px'},
                { field: 'UrlParams', title: '请求参数',  width: '100px'},
                {
                    field: 'IsBlankTarget', title: '新页打开', align: "left", width: '80px',
                    formatter: function (value, row, index) {

                        if (row.IsBlankTarget == @((int)YesOrNo.Yes)) {

                            return '<span class="badge badge-primary">' + "@YesOrNo.Yes.GetDescription()" + '</span>';
                        } else {
                            return '<span class="badge badge-warning">' + "@YesOrNo.No.GetDescription()" + '</span>';
                        }
                    }
                },
                { field: 'Code', title: '编码', width: '80px' },
                { field: 'Redirect', title: '重定向', width: '100px'},
                { field: 'Sequence', title: '排序码', align: "left", width: '60px'},
                {
                    field: 'Status', title: '状态', align: "left", width: '60px',
                    formatter: function (value, row, index) {

                        if (row.Status == @((int)StatusType.Enabled)) {

                            return '<span class="badge badge-primary">' + "@StatusType.Enabled.GetDescription()" + '</span>';
                        } else {
                            return '<span class="badge badge-warning">' + "@StatusType.Disabled.GetDescription()" + '</span>';
                        }
                    }
                },
                {
                    field: 'ModificationTime', title: '修改时间', align: "left", width: '150px' ,
                    formatter: function (value, row, index) {
                        return ys.formatDate(value, "yyyy-MM-dd HH:mm:ss");
                    }
                },
                { field: 'PageId', title: '页面Id', align: "left", width: '150px' },
                { field: 'Id', title: 'Id', align: "left", width: '150px' },
            ],
            onLoadSuccess: function () {
                if (id != '') {
                    $('#gridTable').ysTreeTable('expandRowById', id);
                }
            }
        };
        $('#gridTable').ysTreeTable(options);
    }

    function searchTreeGrid(callBackId) {
        var param = $("#searchDiv").getWebControls();
        $('#gridTable').ysTreeTable('search', param);
        if (callBackId) {
            id = callBackId;
        }
    }

    function showAddTopDialog() {
        var parentId = '@defId';
        ys.openDialog({
            title:  "创建菜单",
            content: '@Url.Content("~/Sys/MenuItem/AddTopModal")' + '?id=' + '' + '&parentId=' + parentId,
            height: '440px',
            callback: function (index, layero) {
                var frame = window[layero.find('iframe')[0]['name']];
                frame.saveForm(index);
            }
        });
    }

    function showAddEditDialog(add) {
        var parentId = '';
        var parentName = '';
        var menuType = '';
        var selectedRows = $("#gridTable").bootstrapTreeTable("getSelections");
        var type1 = '';
        if (add) {
            id = '';
            if (selectedRows.length > 0) {
                type1 = selectedRows[0].Type;
                if (type1 != '@((int)MenuItemType.Directory)') {
                    ys.msgError("请选择目录");
                    return;
                }
                var id1 = selectedRows[0].Id;
                var row = $('#gridTable').ysTreeTable('getRowById', id1);
                if (row) {
                    parentId = row.Id;
                    parentName = row.Name;
                    menuType = row.MenuType;
                    topParentId = row.TopParentId;
                }
            }
            else {
                ys.msgError("请选择上级菜单");
                return;
            }
        }
        else {
            if (!ys.checkRowEdit(selectedRows)) {
                return;
            }
            type1 = selectedRows[0].Type;
            id = selectedRows[0].Id;
            parentId = selectedRows[0].ParentId;
            menuType = selectedRows[0].MenuType;
            topParentId = selectedRows[0].TopParentId;
        }

        if (menuType ==@((int)MenuType.Undefined)) {
            ys.msgError('未定义客户端类型');
            return;
        }
        ys.openDialog({
            title: id == '' ? "新增菜单项" : "修改菜单项",
            content: '@Url.Content("~/Sys/MenuItem/AddEditModal")' + '?menuType=' + menuType + '&topParentId=' + topParentId  +'&type=' + type1 + '&id=' + id + '&parentId=' + parentId + '&parentName=' + encodeURIComponent(parentName),
            height: '100%',
            callback: function (index, layero) {
                var frame = window[layero.find('iframe')[0]['name']];
                frame.saveForm(index);
            }
        });
    }

    function deleteSelected() {
        var selectedRows = $("#gridTable").bootstrapTreeTable("getSelections");
        if (ys.checkRowDelete(selectedRows)) {
            ys.confirm("确认要删除选中的" + selectedRows.length + "条数据吗？", function () {
                var id1 = selectedRows[0].Id;
                var pId1 = selectedRows[0].ParentId;
                ys.ajax({
                    url: '@Url.Content("~/Sys/MenuItem/DeleteSelected")' + '?id=' + id1,
                    type: "post",
                    error: ys.ajaxError,
                    success: function (rst) {
                        if (rst.Flag == 1) {
                            ys.msgSuccess(rst.Message);
                            searchTreeGrid(pId1);
                        }
                        else {
                            ys.msgError(rst.Message);
                        }
                    }
                });
            });
        }
    }
</script>