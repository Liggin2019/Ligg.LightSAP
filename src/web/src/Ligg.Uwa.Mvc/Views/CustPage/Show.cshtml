
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostingEnvironment
@{
    var layout = ViewData["Layout"];
    if (layout.ToString() != "none") Layout = "~/Views/Shared/" + layout + ".cshtml";
    var custPageModel = ViewData["CustPageModel"];

    string theme = ViewBag.Theme;
    string themeCss = theme.IsNullOrEmpty() ? "site-theme.min.css" : "site-theme-" + theme + ".min.css";
}

@await Component.InvokeAsync("CustPage", custPageModel)

@BundlerHelper.Render(HostingEnvironment.ContentRootPath, Url.Content("~/app/site/js/page-init.min.js"))
