{
  "Logging": {
    "LogLevel": {
      "Default": "Debug", // Trace,Debug,Information,Warning,Error,Critical
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AllowedHosts": "*",
  "SystemSetting": {
    //*system
    "IsDemo": false,
    "CorsPolicy": "any",
    "AllowedCorsSites": "192.168.10.51,192.168.10.52", // 允许的其他站点访问Api
    "VirtualDirectory": "",

    //*application
    "ApplicationServer": "ApiMis", //应用服务名称, 例如MvcBasic,MvcCms, ApiBasis, ApiErp, ApiCrm, etc. , 方便扩展到微服务
    "SupportMultiTenants": false, //支持多租户
    "SupportMultiLanguages": false, //支持多语言
    "DefaultCulture": "zh-CN",

    "ExclusiveOnline": false,
    "LogonMode": "Session", // 登录信息保存方式 Cookie Session

    //*db
    "DbProvider": "MySql",
    "DbConnectionString": "server=localhost;database=lightsap;user=root;password=123456;port=3306;pooling=true;max pool size=20;persist security info=True;charset=utf8mb4;",
    "DbCommandTimeoutSeconds": 180, // 数据库超时时间，单位秒
    "DbBackupDir": "",

    //*cache
    "CacheProvider": "Memory", // 缓存使用方式 Memory Redis
    "RedisConnectionString": "127.0.0.1:6379",

    //*logger
    "LoggerProvider": "NLog",

    ////*jwt
    "JwtSecurityKey": "221-5454ggh-hjuy",
    "JwtExpiringHours": "24",
    "JwtIssuer": "liggit.com",
    "JwtAudience": "liggit.com",

    //*running params
    "SnowFlakeWorkerId": 2,
    "GetMaxSequenceStep": 10 // 获取最大排序号的步长
  }
}
